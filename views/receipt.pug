doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Sale Receipt â€” MWF
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/css/attendant-manage.css")

  body
    .layout
      // Sidebar (styled like Sales Report page)
      aside.sidebar
        .sidebar-header
          .logo-container
            img.logo-img(src="/images/logo 2.png", alt="MWF Logo")
            .logo-text Mayondo Wood & Furniture
        nav.sidebar-nav
          ul
            li
              a(href="/sales-entry")
                i.fas.fa-cash-register
                span Sales Entry
            li
              a(href="/receipt", class="active")
                i.fas.fa-receipt
                span Receipt
            li
              a(href="/sales-report")
                i.fas.fa-chart-bar
                span Sales Report
            li
              a(href="/sales-list")
                i.fas.fa-list
                span Sales List
            li
              a(href="/stockList")
                i.fas.fa-boxes
                span Stock List
            li
              a(href="/logout")
                i.fas.fa-sign-out-alt
                span Logout

      // Main content area
      main.main-content
        .receipt-container
          .receipt-header
            img.receipt-logo(src="/images/logo 2.png", alt="MWF Logo")
            h1 Mayondo Wood and Furniture Ltd
            h2 SALES RECEIPT
            .receipt-ref Ref: #{sale._id}

          .receipt-info
            .info-row
              span.info-label Customer Name:
              span.info-value= sale.customerName
            .info-row
              span.info-label Product Name:
              span.info-value= sale.productName
            .info-row
              span.info-label Quantity:
              span.info-value= sale.quantity
            .info-row
              span.info-label Unit Price:
              span.info-value= sale.price.toLocaleString()
            .info-row
              span.info-label Transport:
              span.info-value= sale.transport ? 'Yes (5%)' : 'No'
            .info-row
              span.info-label Payment Type:
              span.info-value= sale.paymentType
            .info-row
              span.info-label Date:
              span.info-value= new Date(sale.date).toLocaleDateString()
            .info-row
              span.info-label Sales Agent:
              span.info-value= sale.salesAgent && sale.salesAgent.name ? sale.salesAgent.name : 'N/A'

            .total-row.info-row
              span.info-label TOTAL AMOUNT:
              span.info-value= sale.total ? sale.total.toLocaleString() : '0'

          .receipt-actions
            a.receipt-btn.btn-back(href="/sales-list")
              i.fas.fa-arrow-left
              | Back to Sales List
            button.receipt-btn.btn-print(type="button", onclick="window.print()")
              i.fas.fa-print
              | Print Receipt

          // Footer styled like the Sales Report page
          footer.footer
            p Thank you for your business! We value your support and look forward to serving you again.
            p.mt-2 For inquiries: contact@mayondowood.com | +256-7676254
