doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Update Profile - Manager
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/css/attendant-manage.css")
    style.
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: #f8f8f8;
      }
      .update-box {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        width: 350px;
        text-align: center;
      }
      img.profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        cursor: pointer;
      }
      input, button {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
      }
      button {
        background: #2c5aa0;
        color: white;
        font-weight: 600;
        cursor: pointer;
      }
      button:hover {
        background: #1e3d6f;
      }

  body
    .update-box
      h2 Update Profile

      // Profile Image
      if user && user.profilePic
        img.profile-pic(src=user.profilePic alt="Profile" id="profilePreview")
      else
        img.profile-pic(src="/images/default-profile.png" alt="Default Profile" id="profilePreview")

      // Update Form
      form(action="/manager/update-profile" method="POST" enctype="multipart/form-data")
        label(for="name") Full Name:
        input(type="text" name="name" id="name" value=user.name required)

        label(for="profilePic") Profile Picture:
        input(type="file" name="profilePic" accept="image/*" id="profilePicInput")

        button(type="submit") Save Changes

      a(href="/manager-dashboard") ‚Üê Back to Dashboard

  script.
    const profileInput = document.getElementById('profilePicInput');
    const profilePreview = document.getElementById('profilePreview');

    profileInput.addEventListener('change', function(event) {
      const [file] = profileInput.files;
      if (file) {
        profilePreview.src = URL.createObjectURL(file);
      }
    });
