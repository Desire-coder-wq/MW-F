    link(rel="stylesheet", href="/css/attendant-manage.css")

  body
    .layout
      // Sidebar
      aside.sidebar
        h2.logo Dashboard
        nav
          ul
            li: a(href="/approve-stock") Approve Stock
            li: a(href="/add-stock") Add Stock
            li: a(href="/sales-report") Sales Reports
            li: a(href="/attendants") Attendants
            li: a(href="/loading/offload") Offload Stock
            li: a(href="/loading/pending", class="active") Load Stock
            li: a(href="#", id="editProfileBtn") Profile
            li: a(href="/logout") Logout

      // Main content
      main.main-content
        header
          h1 Pending Sales

        section.table-section
          table(border="1" cellpadding="5")
            thead
              tr
                th Customer
                th Product
                th Quantity
                th Action
            tbody
              each sale in sales
                tr
                  td= sale.customerName
                  td= sale.productName
                  td= sale.quantity
                  td
                    a(href=`/loading/load/${sale._id}`) Load

