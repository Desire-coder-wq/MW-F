meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Manager Dashboard - MWF
link(rel="stylesheet", href="/css/management.css")
//  Wrapper for sidebar + main 
.layout
  //  Sidebar 
  aside.sidebar
    h2.logo Dashboard
    nav
      ul
        li
          a(href="/stock-report") Reports
        li
          a(href="/approve-stock") Approve Stock
        li
          a(href="/stock") Add Stock
        li
          a(href="/sales-reports") Sales Reports
        li
          a(href="/attendants") Attendants
        li
          a(href="/loading/pending") Pending Sales
        li
          a#editProfileBtn(href="#") Profile
        li
          a(href="/logout") Logout
  //  Main content 
  main.main-content
    header
      .header-profile
        img#headerProfilePic(src="/images/default-profile.png", alt="Profile Picture")
        h1
          | Welcome, 
          span#managerName Manager
    //  Cards 
    section.cards
      .card(onclick="location.href='/sales-list'")
        h3 Sales Made
        p View sales made
      .card(onclick="location.href='/stock-report'")
        h3 Stock Report
        p View stock
      .card(onclick="location.href='/approve-stock'")
        h3 Approve Stock
        p Approve stock submitted by attendants.
      .card(onclick="location.href='/stock'")
        h3 Add Stock
        p Record new stock items for sale.
      .card(onclick="location.href='/sales-report'")
        h3 Sales Report
        p View periodical sales reports.
      .card(onclick="location.href='/products'")
        h3 Finished Furniture
        p View finished products available for sale.
      .card(onclick="location.href='/attendants'")
        h3 Attendants
        p View attendants and monitor tasks.
      .card#profileCard(onclick="location.href='/register'")
        h3 Register Users
        p Register users here.
      .card(onclick="location.href='/logout'")
        h3 Logout
        p Sign out from the system.
//  Profile Modal 
.modal#profileModal
  .modal-content
    span.close#closeModal 
    h2 Edit Profile
    form#profileForm(action="/profile", method="POST", enctype="multipart/form-data")
      //  Profile Picture Section 
      .profile-section
        .profile-pic-wrapper
          img#profilePreview(src="/images/default-profile.png", alt="Profile Picture")
          input#profilePicInput(type="file", name="profilePic", accept="image/*")
          .profile-actions
            button#changePicBtn(type="button") Change
            button#deletePicBtn(type="button") Delete
      //  Info Section 
      .info-section
        label Name:
        input#nameInput(type="text", name="name", value="Manager Name", required)
        label Email:
        input#emailInput(type="email", name="email", value="manager@example.com", required)
      button.save-btn(type="submit") Save
