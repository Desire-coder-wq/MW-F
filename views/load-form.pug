doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title MWF â€” Load Stock
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/css/attendant-manage.css")

  body
    .layout
      aside.sidebar
        .logo-container
          img.logo-img(src="/images/logo 2.png", alt="MWF Logo")
          .logo-text Mayondo Wood & Furniture
        nav
          ul
            li
              a(href="/approve-stock")
                i.fas.fa-check-circle
                span Approve Stock
            li
              a(href="/add-stock")
                i.fas.fa-boxes
                span Add Stock
            li
              a(href="/sales-report")
                i.fas.fa-chart-bar
                span Sales Reports
            li
              a(href="/attendants")
                i.fas.fa-users
                span Attendants
            li
              a(href="/loading/offload")
                i.fas.fa-truck-loading
                span Offload Stock
            li
              a(href="/loading/pending", class="active")
                i.fas.fa-hourglass-half
                span Load Stock
            li
              a(href="/logout")
                i.fas.fa-sign-out-alt
                span Logout

      #topbar
        .header-content
          .company-info
            h1 Load Stock
            h3 Confirm loading for customer order
          .header-actions
            .notification-btn
              i.fas.fa-bell
              .notification-count 0
            .user-profile
              i.fas.fa-user-circle
              span #{user ? user.name : 'User'}

      .container
        .form-section
          .form-container
            .form-header
              h3
                i.fas.fa-truck-loading
                | Loading Confirmation
              p Confirm stock loading for the selected customer order

            .order-details
              .detail-card
                .detail-item
                  i.fas.fa-user
                  strong Customer:
                  span #{sale.customer ? sale.customer.name : 'N/A'}
                .detail-item
                  i.fas.fa-cube
                  strong Product:
                  span #{sale.productName}
                .detail-item
                  i.fas.fa-tag
                  strong Type:
                  span #{sale.productType}
                .detail-item
                  i.fas.fa-box
                  strong Quantity:
                  span #{sale.quantity}

            form(action=`/loading/load/${sale._id}`, method="POST")
              input(type="hidden", name="attendantName", value=user ? user.name : 'Unknown')
              .form-actions
                button.submit-btn(type="submit")
                  i.fas.fa-check-circle
                  | Confirm Loading

    footer
      .container
         p &copy; 2025 Mayondo Wood & Furniture Ltd 
         p Designed by A Rose Desire @ Groundbreaker Talents
